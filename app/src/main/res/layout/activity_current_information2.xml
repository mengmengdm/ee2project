<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_current_information">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Information"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <ImageView
        android:id="@+id/amountOfPeople"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/amount_of_people"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.3"/>

    <ImageView
        android:id="@+id/temperature"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.45" />

    <ImageView
        android:id="@+id/humidity"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/humidity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.6"/>

    <ImageView
        android:id="@+id/noise"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.75"/>

    <TextView
        android:id="@+id/nrOfPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of People"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/amountOfPeople"
        app:layout_constraintBottom_toBottomOf="@id/amountOfPeople"
        app:layout_constraintStart_toEndOf="@id/amountOfPeople"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/temperaturetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/temperature"
        app:layout_constraintStart_toStartOf="@id/nrOfPeople"
        app:layout_constraintEnd_toEndOf="@id/nrOfPeople"
        app:layout_constraintBottom_toBottomOf="@id/temperature"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/humiditytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/humidity"
        app:layout_constraintStart_toStartOf="@id/nrOfPeople"
        app:layout_constraintEnd_toEndOf="@id/nrOfPeople"
        app:layout_constraintBottom_toBottomOf="@id/humidity"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/noisetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound Level"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/noise"
        app:layout_constraintEnd_toEndOf="@id/nrOfPeople"
        app:layout_constraintStart_toStartOf="@id/nrOfPeople"
        app:layout_constraintBottom_toBottomOf="@id/noise"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/people_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/nrOfPeople"
        app:layout_constraintStart_toStartOf="@id/nrOfPeople"
        app:layout_constraintEnd_toEndOf="@id/nrOfPeople"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/temperature_value"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginTop="5dp"
        android:text="0"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/nrOfPeople"
        app:layout_constraintStart_toStartOf="@id/nrOfPeople"
        app:layout_constraintTop_toBottomOf="@id/temperaturetext" />

    <TextView
        android:id="@+id/humidity_value"
        android:layout_width="58dp"
        android:layout_height="33dp"
        android:text="30"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/humiditytext"
        app:layout_constraintStart_toStartOf="@id/nrOfPeople"
        app:layout_constraintEnd_toEndOf="@id/nrOfPeople"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/noise_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noisy"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/noisetext"
        app:layout_constraintStart_toStartOf="@id/nrOfPeople"
        app:layout_constraintEnd_toEndOf="@id/nrOfPeople"
        android:layout_marginTop="5dp" />



    <Button
        android:id="@+id/button_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main"
        android:textColor="#000000"
        android:textSize="20dp"
        app:backgroundTint="#edbc45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.907" />






</androidx.constraintlayout.widget.ConstraintLayout>